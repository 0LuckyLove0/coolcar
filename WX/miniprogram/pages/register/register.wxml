<view class="container padding-top-xl">
    <view class="lic-tmpl" wx:if="{{!licImgURL}}" bindtap="onUploadLic">
        <image class="lic-tmpl-img stretch" src="/resources/lic.png"/>
        <view class="cuIcon-camerafill lg text-gray"></view>
        <view class="instruction">请上传驾驶证哈</view>
    </view>
    
    <block wx:else>
        <view class="lic-tmpl">
            <image class="stretch" src="{{licImgURL}}"/>
            <image wx:if="{{state==='VERIFIED'}}" class="check" src="/resources/check.png"/>
    

        </view>
            <view class="lic-form margin-top-xl">
                <view class="cu-form-group">
                <view class="title">驾驶证号</view>
                <input placeholder="驾驶证号" value="{{licNo}}" disabled="{{state!=='UNSUBMITTED'}}"></input>
            </view>

            <view class="cu-form-group">
		        <view class="title">姓名</view>
                <input placeholder="姓名" value="{{name}}" disabled="{{state!=='UNSUBMITTED'}}"></input>
            </view>

            <view class="cu-form-group">
                <view class="title">性别</view>
                <picker bindchange="onGenderChange" value="{{genderIndex}}" range="{{genders}}" disabled="{{state!=='UNSUBMITTED'}}">
                    <view class="picker">
                        {{genders[genderIndex]}}
                    </view>
                </picker>
            </view>

            <view class="cu-form-group">
                <view class="title">出生日期</view>
                <picker mode="date" value="{{BirthDate}}" bindchange="onBirthDateChange"disabled="{{state!=='UNSUBMITTED'}}">
                    <view class="picker">
                        {{birthDate}}
                    </view>
                </picker>
            </view>    

        </view>
        <button wx:if="{{state==='UNSUBMITTED'}}" class="cu-btn bg-red margin-tb-sm lg margin-top-xl" bindtap="onSubmit">
            好啦提交！
        </button>
        <button wx:if="{{state==='PENDING'}}" class="cu-btn block bg-blue margin-margin-top lg" disabled>
            请小等一会 审查中~
        </button>
        <button wx:if="{{state==='VERIFIED'}}" class="cu-btn bg-red margin-tb-sm lg margin-top-xl" bindtap="onResubmit">
            再来审查一次吧
        </button>
    </block>
</view>